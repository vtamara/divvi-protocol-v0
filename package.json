{
  "name": "typescript-starter",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": "git@github.com:valora-inc/typescript-starter.git",
  "author": "Valora Inc",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "yarn build",
    "eslint": "eslint --ext=.tsx,.ts,.json scripts/ test/",
    "eslint:fix": "yarn eslint --fix",
    "solhint": "solhint --max-warnings=0 contracts/**/*.sol",
    "solhint:fix": "yarn solhint --fix --noPrompt",
    "lint": "yarn eslint && yarn solhint",
    "lint:fix": "yarn eslint:fix && yarn solhint:fix",
    "format": "prettier --log-level error --write .",
    "format:check": "prettier --check .",
    "test": "hardhat test && jest --silent",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --ci --coverage",
    "supercheck": "yarn format && yarn lint:fix && yarn typecheck && yarn knip && yarn test",
    "example": "ts-node ./scripts/example.ts",
    "knip": "knip",
    "compile": "hardhat compile"
  },
  "devDependencies": {
    "@github/memoize": "^1.1.5",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.8",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomicfoundation/hardhat-viem": "^2.0.6",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.7.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^8.18.0",
    "@valora/prettier-config": "^0.0.1",
    "@valora/secrets-loader": "^1.0.0",
    "chai": "^4.3.7",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.29.1",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.17",
    "hardhat-gas-reporter": "^2.2.2",
    "jest": "^29.7.0",
    "knip": "^5.2.2",
    "nock": "^13.5.6",
    "prettier": "^3.5.2",
    "prettier-plugin-solidity": "^1.4.2",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.14",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "viem": "^2.21.54",
    "yargs": "^17.7.2"
  },
  "prettier": "@valora/prettier-config"
}
